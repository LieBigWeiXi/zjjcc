<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/newItemColor">

    <ImageView
        android:id="@+id/news_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>
    <LinearLayout
        android:id="@+id/news_bkg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/newsTitle"
        android:layout_alignBottom="@+id/news_cover"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp">
        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/newsTitleColor"
            android:textSize="10sp"
            android:text="标题标题标标题标题标题标题标题题标标题标题标题标题标题题标标题标题标题标题标题"
            android:maxLines="2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"/>

    </LinearLayout>
</RelativeLayout>
